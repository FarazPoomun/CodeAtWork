<body onload="populateDropDownText()">
    <div class="navbar">
        <div id="navbarButtons">
            <img src="~/Design/AppLogo.png" id="appLogo" class="vertical-center" />
            <div id="navbarLinks" style="font-family: Comfortaa;">
                <a href="/CodeAtWork/Home" class="center">Home</a>
                <div class="dropdown centerDropDown">
                    <button class="dropbtn" onclick="OpenDropMenu('CoursesList')">
                        Courses
                        <i class="fa fa-caret-down"></i>
                    </button>
                    <div class="dropdown-content" id="CoursesList">
                        <div class="leftDropdownPane">
                            <a style="margin-top: 2rem;" class="activeDropDown" onclick="ChangeDropDownText(this, 0)">C#</a>
                            <a onclick="ChangeDropDownText(this, 1)">JavaScript</a>
                            <a onclick="ChangeDropDownText(this, 2)">SQL</a>
                            <a onclick="ChangeDropDownText(this, 3)">Python</a>
                            <a onclick="ChangeDropDownText(this, 4)">TypeScript</a>
                            <a onclick="ChangeDropDownText(this, 5)">GitHub</a>
                        </div>
                        <div class="rightDropdownPane" id="dropDownText">
                            <h1>C#<img class='CSharpUnderLine' src='/Design/Home/line-long-skills.png' /></h1>

                            <p>Checkout Our Courses On C# </p>
                            <div id="CoursesListPerTopic">
                                <div>
                                    <ul class="AllCoursesListInDropdown">
                                        <li>Working With Generics</li>
                                        <li>Datatypes Conversion</li>
                                        <li>Collections in C#</li>
                                        <li>Events</li>
                                    </ul>
                                </div>
                                <div>
                                    <ul class="AllCoursesListInDropdown">
                                        <li>LINQ With C#</li>
                                        <li>Reflection</li>
                                        <li>Delegates</li>
                                        <li>Predicates And Func</li>
                                    </ul>
                                </div>
                            </div>
                            <div style="float:right">
                            <p id="SeeMoreTxt">See More .. </p></div>
                        </div>
                    </div>
                </div>
                <div class="dropdown centerDropDown">
                    <button class="dropbtn" onclick="OpenDropMenu('PathsList')">
                        Paths
                        <i class="fa fa-caret-down"></i>
                    </button>
                    <div class="dropdown-content" id="PathsList">
                        <a href="#">Link 1</a>
                        <a href="#">Link 2</a>
                        <a href="#">Link 3</a>
                    </div>
                </div>
                <a style="float: right;" href="/CodeAtWork/Login" class="center">Sign In</a>
            </div>
        </div>
    </div>

    <div class="main">
        @RenderBody()
    </div>
</body>
</html>
